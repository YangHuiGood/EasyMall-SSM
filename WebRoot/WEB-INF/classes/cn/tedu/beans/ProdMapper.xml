<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.mapper.ProdMapper">

<resultMap type="cn.tedu.beans.Prod" id="prodRM">
 <id column="id" property="id"/>
 <collection property="prodCategory" ofType="cn.tedu.mybatis.beans.ProdCategory">
  <id column="id" property="id"/>
  <result column="cname" property="cname"/>
 </collection>
</resultMap>
<!--查询所有商品的方法-->
 <select id="findProds" resultType="prodRM">
	Select prod.*,prod_category.cname from 
	prod inner join prod_category on prod.cid = prod_category.id;
 </select>
 
					
					
</mapper>

